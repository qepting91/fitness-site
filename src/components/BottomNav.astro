---
// Bottom navigation for mobile
const currentPath = Astro.url.pathname;
---

<nav class="fixed bottom-0 left-0 right-0 bg-slate-950/95 backdrop-blur-lg border-t border-slate-800/50 z-50 pb-safe">
  <div class="max-w-lg mx-auto flex justify-around items-center h-16">
    <a 
      href="/" 
      class={`flex flex-col items-center justify-center min-w-[64px] min-h-[44px] rounded-xl transition-colors ${currentPath === '/' ? 'text-violet-400' : 'text-slate-400 hover:text-slate-200'}`}
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
      </svg>
      <span class="text-xs mt-1 font-medium">Home</span>
    </a>
    
    <a 
      href="/search" 
      class={`flex flex-col items-center justify-center min-w-[64px] min-h-[44px] rounded-xl transition-colors ${currentPath === '/search' ? 'text-violet-400' : 'text-slate-400 hover:text-slate-200'}`}
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <span class="text-xs mt-1 font-medium">Search</span>
    </a>
  </div>
</nav>
