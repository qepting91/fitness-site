---
// Bottom navigation for mobile
const currentPath = Astro.url.pathname;
---

<nav class="fixed bottom-0 left-0 right-0 bg-slate-950/95 backdrop-blur-lg border-t border-slate-800/50 z-50 pb-safe">
  <div class="max-w-lg mx-auto flex justify-around items-center h-16">
    <a
      href="/"
      class={`flex flex-col items-center justify-center min-w-[56px] min-h-[44px] rounded-xl transition-colors ${currentPath === '/' ? 'text-violet-400' : 'text-slate-400 hover:text-slate-200'}`}
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
      </svg>
      <span class="text-[10px] mt-0.5 font-medium">Home</span>
    </a>

    <a
      href="/workouts"
      class={`flex flex-col items-center justify-center min-w-[56px] min-h-[44px] rounded-xl transition-colors ${currentPath.startsWith('/workouts') ? 'text-violet-400' : 'text-slate-400 hover:text-slate-200'}`}
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
      <span class="text-[10px] mt-0.5 font-medium">Workouts</span>
    </a>

    <a
      href="/search"
      class={`flex flex-col items-center justify-center min-w-[56px] min-h-[44px] rounded-xl transition-colors ${currentPath === '/search' ? 'text-violet-400' : 'text-slate-400 hover:text-slate-200'}`}
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <span class="text-[10px] mt-0.5 font-medium">Exercises</span>
    </a>

    <a
      href="/equipment"
      class={`flex flex-col items-center justify-center min-w-[56px] min-h-[44px] rounded-xl transition-colors ${currentPath === '/equipment' ? 'text-violet-400' : 'text-slate-400 hover:text-slate-200'}`}
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
      </svg>
      <span class="text-[10px] mt-0.5 font-medium">Equipment</span>
    </a>
  </div>
</nav>
